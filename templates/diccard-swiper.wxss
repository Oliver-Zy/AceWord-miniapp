.swiper {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.swiper-item {
  box-sizing: border-box;
  padding-bottom: 100px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.indicator-dots-container {
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
}

.indicator-dots {
  width: 50px;
  height: 4px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.active-dot {
  width: 18px;
  height: 4px;
  background: #FFFFFF;
  border-radius: 4px;
}

.inactive-dot {
  width: 4px;
  height: 4px;
  background: rgba(255, 255, 255, 0.48);
  border-radius: 4px;
}