<template name="avatar-bar">

  <view class="avatar-bar">
    <view class="avatar-group">
      <image class="avatar-img" src="{{avatarUrl == null ? './images/avatar.png' : avatarUrl}}" bindtap="modifyAvatar" binderror="onAvatarError" bindload="onAvatarLoad"></image>
      <view class="right-avatar-group">
        <text bindtap="modifyNickname">{{nickName == '' ? '点击登录' : nickName}}</text>
        <view class="down-right-avatar-group">
          <image src="./images/copy.png"></image>
          <text bindtap="onCopyID">复制用户ID</text>
        </view>
      </view>
    </view>
    <view class="edit-profile-btn">
      <text>编辑资料</text>
      <image class="edit-arrow" src="./images/right.png"></image>
    </view>
  </view>

</template>

<template name="vip-card">
  <view class="vip-card" bindtap="onOpenVip">
    <view class="vip-card-content">
      <view class="vip-text-content">
        <text class="vip-title">开通AceWord VIP</text>
        <text class="vip-subtitle">无限卡片额度｜真题词书例句</text>
      </view>
      <view class="vip-btn">
        <text>立即开通</text>
      </view>
    </view>
  </view>
</template>

<template name="statistic-bar">

  <view class="statistic-bar">
    <view class="statistic-group">
      <view class="up-statistic-group">
        <text>{{learningInfo.yearLearningDayNum}}</text>
        <text>天</text>
      </view>
      <view style="height:2px;"></view>
      <text>今年学习</text>
    </view>
    <view style="width:1px;height:15px;background-color:#C9CDD4;"></view>
    <view class="statistic-group">
      <view class="up-statistic-group">
        <text>{{learningInfo.monthLearningDayNum}}</text>
        <text>天</text>
      </view>
      <view style="height:2px;"></view>
      <text>本月学习</text>
    </view>
    <view style="width:1px;height:15px;background-color:#C9CDD4;"></view>
    <view class="statistic-group">
      <view class="up-statistic-group">
        <text>{{learningInfo.continuousLearningDayNum}}</text>
        <text>天</text>
      </view>
      <view style="height:2px;"></view>
      <text>连续学习</text>
    </view>
  </view>

</template>

<template name="cell-group">

  <view class="cell-group">
    <block wx:for="{{cellInfo}}" wx:key="imgName">
      <view class="cell" bindtap="onCell" data-type="{{item.imgName}}">
        <button wx:if="{{item.imgName == 'share'}}" class="share-button" open-type="share"></button>
        <view>
          <image src="/images/cell-icons/{{isDarkMode ? item.imgNameDark : item.imgName}}.png"></image>
          <text>{{item.text}}</text>
        </view>
        <image class="right-img" src="./images/right.png"></image>
      </view>
    </block>
  </view>

</template>