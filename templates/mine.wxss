/* ---------- S avatarBar---------- */
.avatar-bar {
  box-sizing: border-box;
  width: 100%;
  padding: 0 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar-group {
  display: flex;
  align-items: center;
}

.avatar-img {
  box-sizing: border-box;
  width: 52px;
  height: 52px;
  margin-right: 12px;
  border: 1px solid white;
  border-radius: 50%;
}

.right-avatar-group {
  display: flex;
  flex-direction: column;
}

.right-avatar-group text:first-child {
  font-family: var(--simHei);
  font-weight: 500;
  font-size: 18px;
  color: #1D2129;
}

.down-right-avatar-group {
  display: flex;
  align-items: center;
  padding-top: 4px;
}

.down-right-avatar-group image {
  width: 16px;
  height: 16px;
  padding-right: 4px;
}

.down-right-avatar-group text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  line-height: 16px;
  color: #9FA7B5;
}

.edit-profile-btn {
  width: 96px;
  height: 26px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 51px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 24px;
  backdrop-filter: blur(10px);
}

.edit-profile-btn text {
  font-family: MiSans;
  font-size: 12px;
  font-weight: 400;
  color: #4E5969;
  margin-right: 8px;
}

.edit-arrow {
  width: 10px;
  height: 10px;
}

/* ---------- E avatarBar---------- */

/* ---------- S vipCard---------- */
.vip-card {
  width: calc(100% - 28px);
  height: 68px;
  margin: 14px 14px 0;
  background: linear-gradient(213deg, #464D66 0%, #252E49 100%);
  border-radius: 12px;
  position: relative;
  overflow: hidden;
}

.vip-card-content {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 26px 0 26px;
  box-sizing: border-box;
}

.vip-text-content {
  display: flex;
  flex-direction: column;
}

.vip-title {
  font-family: MiSans;
  font-size: 15px;
  font-weight: 700;
  color: white;
  line-height: 22px;
  margin-bottom: 2px;
}

.vip-subtitle {
  font-family: Urbanist;
  font-size: 11px;
  font-weight: 500;
  color: #ADB2BF;
}

.vip-btn {
  width: 74px;
  height: 26px;
  background: linear-gradient(0deg, #FAB220 0%, #FAB220 100%);
  border-radius: 75px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vip-btn text {
  font-family: MiSans;
  font-size: 12px;
  font-weight: 600;
  color: white;
  text-transform: capitalize;
  line-height: 18px;
}

.vip-bg-effects {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.vip-circle {
  position: absolute;
  border-radius: 50%;
  filter: blur(11.5px);
}

.vip-circle-1 {
  width: 62.11px;
  height: 62.11px;
