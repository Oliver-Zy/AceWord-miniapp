/* ---------- S statisticBar---------- */
.statistic-bar {
  box-sizing: border-box;
  width: 100%;
  padding: 0 16px;
  margin-top: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.statistic-group {
  width: 82px;
  height: 72px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.up-statistic-group text:nth-child(1) {
  font-family: var(--sfpro-bold);
  font-size: 20px;
  color: #1D2129;
}

.up-statistic-group text:nth-child(2) {
  padding-left: 2px;
  font-family: var(--simHei);
  font-weight: 500;
  font-size: 12px;
  color: #1D2129;
}

.statistic-group text:nth-child(3) {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 11px;
  color: #9FA7B5;
}

/* ---------- E statisticBar---------- */

/* ---------- S cell-group---------- */
.cell-group {
  box-sizing: border-box;
  width: 100%;
  padding: 0 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cell {
  width: 100%;
  height: 48px;
  padding: 2px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.cell view {
  display: flex;
  align-items: center;
}

.cell view image {
  width: 24px;
  height: 24px;
  padding-right: 10px;
}

.cell view text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 16px;
  color: #26282C;
}

.right-img {
  width: 14px;
  height: 14px;
}

.share-button {
  width: 100%;
  height: 100%;
  background: none !important;
  color: #000 !important;
  position: absolute;
}

.share-button::after  {
  border: none;
}

