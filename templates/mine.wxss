  filter: blur(2.5px);
}

.vip-circle-2 {
  width: 62.11px;
  height: 62.11px;
  background: #FFA235;
  top: -11px;
  right: 3px;
  box-shadow: 23px 23px 23px rgba(255, 162, 53, 0.3);
}

.vip-circle-3 {
  width: 57.78px;
  height: 57.78px;
  background: #FD9B09;
  top: -37px;
  right: 37px;
  box-shadow: 24px 24px 24px rgba(253, 155, 9, 0.3);
  filter: blur(12px);
}

.vip-circle-4 {
  width: 99.67px;
