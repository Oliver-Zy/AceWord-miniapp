@import '/templates/practice.wxss';

.container {
  width: 100%;
  height: 100%;
  background: linear-gradient(0deg, #F5F8FE, #F5F8FE);
  display: flex;
  flex-direction: column;
  align-items: center;
  --button-default-background-color:#fff;
  --button-default-color:#000;
}

/* 弹窗样式优化 */
.dialog-title {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #1F2937;
  text-align: center;
  padding: 8px 0;
}

.dialog-container {
  text-align: center;
  color: #4B5563;
  line-height: 24px;
  font-size: 15px;
  font-family: var(--simHei);
  padding: 16px 24px;
}

.dialog-option {
  font-size: 14px;
  padding: 16px 24px 8px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.checkbox-label {
  font-family: var(--simHei);
  font-size: 14px;
  margin-left: 8px;
  line-height: 20px;
}

.wordNameCN-container {
  display: flex;
  align-items: center;
}

.wordNameCN-container-blur {
  width: 100%;
  height: 80px;
  backdrop-filter: blur(6px);
  position: relative;
  bottom: 50px;
}

.wordNameCN-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 16px;
  color: #1D2129;
}

.congratulation-text {
  font-family: var(--poppins);
  font-size: 14px;
  color: #86909C;
}

.progress-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 220px;
}

.progress-container text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 14px;
  color: #86909C;
}

.progress {
  width: 154px;
  height: 4px;
  background: rgba(61, 66, 98, 0.08);
  border-radius: 12px;
  margin-top: 8px;
}

.inner-progress {
  height: 4px;
  background: rgba(61, 66, 98, 1);
  border-radius: 12px;
  animation-duration: 5s;
  animation-fill-mode: forwards;
  animation-timing-function: linear;
  animation-name: countDown;
}

@keyframes countDown {
  from {
    width: 100%;
  }

  to {
    width: 0%;
  }
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .container {
    width: 100%;
    height: 100%;
    background: linear-gradient(180.13deg, #1D1F31 0.11%, #131421 99.89%), linear-gradient(0deg, #F5F8FE, #F5F8FE), #F4F5F7;
    display: flex;
    flex-direction: column;
    align-items: center;
    --button-default-background-color:#27283A;
    --button-default-color:#fff;
  
  }

  .wordNameCN-text {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 16px;
    color: #D5D9E0;
  }

  /* DarkMode 下的样式 end */

}