/* pages/vip/vip.wxss */
.container {
  width: 100%;
  height: 100%;
  background: #161A27;
}

scroll-view {
  display: flex;
  align-items: flex-start;
}

/* 隐藏滚动条 */
scroll-view::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.background-container {
  box-sizing: border-box;
  margin: 0 16px;
  padding: 0 16px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.background-img {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.avatar-group {
  display: flex;
  align-items: center;
  position: absolute;
  left: 16px;
  top: 46px;
}

.avatar-img {
  box-sizing: border-box;
  width: 52px;
  height: 52px;
  margin-right: 12px;
  border: 1px solid white;
  border-radius: 50%;
}

.right-avatar-group {
  display: flex;
  flex-direction: column;
}

.right-avatar-group-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #72522D;
}

.down-right-avatar-group {
  display: flex;
  align-items: center;
  padding-top: 4px;
}

.down-right-avatar-group image {
  width: 16px;
  height: 16px;
  padding-right: 4px;
}

.down-right-avatar-group-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  line-height: 16px;
  color: #B58A5A;
}

.title-text {
  font-weight: 600;
  font-size: 18px;
  color: #1D2129;
}

/* 会员档位容器 */
.vip-plans-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  gap: 4px;
}

/* 会员档位卡片 */
.vip-plan-card {
  position: relative;
  flex: 1;
  height: 152px;
  background: white;
  border: 1px solid #E2E2E2;
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.3s ease;
  max-width: 104px;
}

/* 选中状态 */
.vip-plan-card.selected {
  background: linear-gradient(180deg, #FEF9E9 0%, #FEF9EC 100%);
  border: 1px solid #AC884E;
}

/* 选中图标 */
.selected-corner {
  position: absolute;
  top: 0;
  right: 0;
  width: 24px;
  height: 20px;
}

/* 会员标题 */
.plan-title {
  position: absolute;
  left: 50%;
  top: 20px;
  transform: translateX(-50%);
  text-align: center;
  color: #434346;
  font-size: 14px;
  font-family: MiSans;
  font-weight: 400;
  line-height: 20px;
  width: 100%;
}

/* 价格区域 */
.plan-price-area {
  position: absolute;
  left: 26px;
  top: 50px;
  display: flex;
  align-items: baseline;
}

.plan-currency {
  color: #BB8247;
  font-size: 16px;
  font-family: MiSans;
  font-weight: 600;
}

.plan-price {
  color: #BB8247;
  font-size: 28px;
  font-family: MiSans;
  font-weight: 600;
  line-height: 35px;
}

/* 节省标签 */
.savings-badge {
  position: absolute;
  left: 50%;
  top: 95px;
  transform: translateX(-50%);
  height: 22px;
  background: #FAB220;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8px;
  white-space: nowrap;
}

/* 体验版标签样式 */
.experience-badge {
  background: #E8E8E8;
}

.experience-badge .savings-text {
  color: #666666;
}

.savings-text {
  color: white;
  font-size: 14px;
  font-family: MiSans;
  font-weight: 400;
  line-height: 14px;
}

/* 原价 */
.original-price {
  position: absolute;
  left: 50%;
  top: 123px;
  transform: translateX(-50%);
  text-align: center;
  color: #939495;
  font-size: 12px;
  font-family: MiSans;
  font-weight: 400;
  text-decoration: line-through;
  line-height: 14px;
  width: 100%;
}

/* 永久会员卡片样式（保留兼容性） */
.lifetime-vip-card {
  position: relative;
  background: linear-gradient(180deg, #FEF9E9 0%, #FEF9EC 100%);
  border: 1px solid #AC884E;
  border-radius: 16px;
  padding: 16px;
  margin: 0 0;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.vip-badge {
  position: absolute;
  top: 0;
  left: 0;
  width: 60%;
  max-width: 206px;
  height: 30px;
  background: linear-gradient(90deg, #FFF1D8 0%, rgba(255, 218, 151, 0) 100%);
  display: flex;
  align-items: center;
  padding-left: 16px;
}

.vip-badge-text {
  font-family: Poppins;
  font-size: 12px;
  font-weight: 600;
  color: #D09B60;
  line-height: 18px;
}

.lifetime-content {
  margin-top: 24px;
  display: flex;
  flex-direction: column;
}

.lifetime-title {
  font-family: MiSans;
  font-size: 16px;
  font-weight: 600;
  color: #434346;
  line-height: 20px;
  margin-bottom: 8px;
}

.lifetime-subtitle {
  font-family: MiSans;
  font-size: 11px;
  font-weight: 400;
  color: #86909C;
  line-height: 14px;
  margin-bottom: 4px;
}

.lifetime-promo {
  font-family: MiSans;
  font-size: 13px;
  color: #FAB220;
  line-height: 14px;
  font-weight: 400;
}

.lifetime-price {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 4px;
}

.price-symbol {
  font-family: MiSans;
  font-size: 16px;
  font-weight: 600;
  color: #BB8247;
  line-height: 1;
  margin-right: 2px;
}

.price-number {
  font-family: MiSans;
  font-size: 28px;
  font-weight: 600;
  color: #BB8247;
  line-height: 1;
}

.original-price-text {
  font-family: MiSans;
  font-size: 12px;
  font-weight: 400;
  color: #939495;
  text-decoration: line-through;
  line-height: 14px;
}

.lifetime-corner {
  position: absolute;
  top: 0;
  right: 0;
  width: 24px;
  height: 20px;
}

.desc-text {
  font-weight: 600;
  font-size: 14px;
  color: #434346;
}

.price-text {
  font-family: var(--sfpro-bold);
  font-size: 28px;
  color: #BB8247;
}

.lable {
  width: 100%;
  height: 24px;
  background: #AC884E;
  border: 1px solid #AC884E;
  border-radius: 0 0 12px 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lable-text {
  font-weight: 400;
  font-size: 12px;
  color: #FFFFFF;
}

.addi-text {
  font-weight: 400;
  font-size: 12px;
  color: #939495;
}

/* 原价划线样式 */
.original-price {
  font-weight: 400;
  font-size: 12px;
  color: #939495;
  text-decoration: line-through;
}

.blank-text {
  font-weight: 400;
  font-size: 12px;
  color: #939495;
}

.pay-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(97.01deg, #FAD79D 16.06%, #FFC96F 74.76%);
  box-shadow: 0px 6px 20px rgba(235, 173, 70, 0.32);
  border-radius: 12px;
  width: 100%;
  height: 52px;
  box-sizing: border-box;
}

.pay-btn-text {
  font-weight: 600;
  font-size: 16px;
  color: #7D6032;
}



.feature-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right-feature-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.feature-title {
  font-weight: 600;
  font-size: 15px;
  letter-spacing: -0.3px;
  color: #1D2129;
}

.feature-desc {
  font-weight: 400;
  font-size: 13px;
  letter-spacing: -0.3px;
  color: #929499;
}

/* 特权分组标题 */
.feature-section-title {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #1D2129;
  padding-left: 4px;
}