/* pages/vip/vip.wxss */
.container {
  width: 100%;
  height: 100%;
  background: #161A27;
}

scroll-view {
  display: flex;
  align-items: flex-start;
}

.background-container {
  box-sizing: border-box;
  margin: 0 16px;
  padding: 0 16px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.background-img {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.avatar-group {
  display: flex;
  align-items: center;
  position: absolute;
  left: 16px;
  top: 46px;
}

.avatar-img {
  box-sizing: border-box;
  width: 52px;
  height: 52px;
  margin-right: 12px;
  border: 1px solid white;
  border-radius: 50%;
}

.right-avatar-group {
  display: flex;
  flex-direction: column;
}

.right-avatar-group-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #72522D;
}

.down-right-avatar-group {
  display: flex;
  align-items: center;
  padding-top: 4px;
}

.down-right-avatar-group image {
  width: 16px;
  height: 16px;
  padding-right: 4px;
}

.down-right-avatar-group-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  line-height: 16px;
  color: #B58A5A;
}

.title-text {
  font-weight: 600;
  font-size: 18px;
  color: #1D2129;
}

.price-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 8px;
  /* 添加间距使布局更美观 */
}

.price-block {
  box-sizing: border-box;
  padding-top: 20px;
  background: #FFFFFF;
  border: 1px solid #E2E2E2;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.price-block-chosen {
  box-sizing: border-box;
  padding-top: 20px;
  background: linear-gradient(180deg, #FEF9E9 0%, #FEF9EC 100%);
  background-color: #fff9eb;
  border: 1px solid #AC884E;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.desc-text {
  font-weight: 600;
  font-size: 14px;
  color: #434346;
}

.price-text {
  font-family: var(--sfpro-bold);
  font-size: 28px;
  color: #BB8247;
}

.lable {
  width: 100%;
  height: 24px;
  background: #AC884E;
  border: 1px solid #AC884E;
  border-radius: 0 0 12px 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lable-text {
  font-weight: 400;
  font-size: 12px;
  color: #FFFFFF;
}

.addi-text {
  font-weight: 400;
  font-size: 12px;
  color: #939495;
}

/* 原价划线样式 */
.original-price {
  font-weight: 400;
  font-size: 12px;
  color: #939495;
  text-decoration: line-through;
}

.blank-text {
  font-weight: 400;
  font-size: 12px;
  color: #939495;
}

.pay-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(97.01deg, #FAD79D 16.06%, #FFC96F 74.76%);
  box-shadow: 0px 6px 20px rgba(235, 173, 70, 0.32);
  border-radius: 12px;
}

.pay-btn-text {
  font-weight: 600;
  font-size: 16px;
  color: #7D6032;
}

.feature-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right-feature-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.feature-title {
  font-weight: 600;
  font-size: 15px;
  letter-spacing: -0.3px;
  color: #1D2129;
}

.feature-desc {
  font-weight: 400;
  font-size: 13px;
  letter-spacing: -0.3px;
  color: #929499;
}

/* 特权分组标题 */
.feature-section-title {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #1D2129;
  padding-left: 4px;
}