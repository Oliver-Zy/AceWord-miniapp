/* 真题词汇页面样式 - 参考wordbook-all页面 */

.container {
  width: 100%;
  height: 100vh;
  background-image: linear-gradient(180deg, #EDE9FE -10%, #F9FAFB 30%);
  /* 与项目整体保持一致的紫色系渐变背景 */
}

/* 年份卡片 */
.year-card {
  margin: 0 16px;
  background: #FFFFFF;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  border: 1px solid #F1F3F4;
  overflow: hidden;
}

/* 折叠面板自定义样式 */
.collapse-item {
  background: transparent !important;
  --collapse-item-content-padding: 0;
}



/* 单词列表容器 */
.word-list-container {
  background: transparent !important;
  margin: 0 !important;
}

/* 单词项 */
.word-item {
  padding: 12px 18px;
  border-bottom: 1px solid #F2F3F5;
}

.word-item:last-child {
  border-bottom: none;
}

.word-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.word-text {
  font-family: var(--inter-medium);
  font-size: 16px;
  font-weight: 500;
  color: #1D2129;
}

.meaning-text {
  font-family: var(--simHei);
  font-size: 13px;
  color: #86909C;
}



/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 20px;
}

/* 添加按钮 - 与复习页面开始练习按钮位置一致 */
.add-button-container {
  width: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 60px;
}

.add-button {
  height: 40px;
  padding: 0 30px;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 100px;
  box-shadow: 0px 8px 24px rgba(255, 215, 0, 0.20);
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
}

.vip-icon {
  width: 16px;
  height: 16px;
}

.add-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #FFFFFF;
}

/* 暗色模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #1E1B4B -10%, #1F2937 30%);
    /* 深色模式下与紫色系统协调的渐变 */
  }
  
  .year-card {
    background: #2D3748;
    border-color: #4A5568;
  }
  
  .word-name {
    color: #E2E8F0;
  }
  
  .meaning-text {
    color: #A0AEC0;
  }
  
  .word-count {
    color: #A0AEC0;
  }
  
  .select-all-btn {
    background: #4A5568;
  }
  
  .select-text {
    color: #E2E8F0;
  }
  
  .divider {
    background: #4A5568;
  }
  
  .add-button {
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    box-shadow: 0px 8px 24px rgba(255, 215, 0, 0.15);
  }
}
