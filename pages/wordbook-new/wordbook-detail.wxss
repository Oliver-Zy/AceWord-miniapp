/* 词书详情页样式 - 完全参照原版wordbook-all的样式 */

.container {
  width: 100%;
  height: 100vh;
  background-image: linear-gradient(180deg, #EDE9FE -10%, #F9FAFB 30%);
}

/* 子分类卡片 */
.subcategory-card {
  margin: 0 16px;
  background: #FFFFFF;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  border: 1px solid #F1F3F4;
  overflow: hidden;
}

/* 折叠面板自定义样式 */
.collapse-item {
  background: transparent !important;
  --collapse-item-content-padding: 0;
}

/* 子分类数量 */
.subcategory-count {
  font-size: 13px;
  color: #86909C;
  font-weight: 500;
}

/* 词书组 */
.wordbook-group {
  background: transparent !important;
  margin: 0 !important;
}

/* 词书单元格 */
.wordbook-cell {
  background: transparent !important;
  align-items: center !important;
}

/* 调整Cell内容区域宽度和对齐 */
.wordbook-cell .van-cell__title {
  flex: 2 !important;
  min-width: 0 !important;
}

.wordbook-cell .van-cell__value {
  flex: 0 0 auto !important;
  text-align: right !important;
  align-self: center !important;
  margin-left: 12px !important;
}

.wordbook-cell .van-cell__right-icon {
  align-self: center !important;
  margin-left: 8px !important;
}

/* 当前词书样式 */
.current-wordbook {
  background: linear-gradient(135deg, #EDE9FE 0%, #DDD6FE 100%) !important;
  border-left: 3px solid #6366F1 !important;
}

/* 词书标签 */
.book-tags {
  display: flex;
  gap: 4px;
  align-items: center;
  flex-shrink: 0;
  max-width: 120px;
  align-self: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 20px;
}

/* 暗色模式 - 与项目保持一致 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #1E1B4B -10%, #1F2937 30%);
  }

  .subcategory-card {
    background: #2A2D3A;
    border-color: #3A3F4B;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .subcategory-count {
    color: #9598A9;
  }

  .current-wordbook {
    background: linear-gradient(135deg, #312E81 0%, #3730A3 100%) !important;
    border-left-color: #A5B4FC !important;
  }
}
