.container {
  width: 100%;
  height: 100vh;
  background-image: linear-gradient(180deg, #EDE9FE -10%, #F9FAFB 30%);
  /* 与项目整体保持一致的紫色系渐变背景 */
}



/* 折叠面板样式 - 参考word-card样式 */
.collapse-item {
  margin: 12px 16px 0 16px;
  border-radius: 12px;
  overflow: hidden;
  background: #FFFFFF;
  border: 1px solid #F1F3F4;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

/* 词书列表容器 - 参考word-list-container */
.wordbook-list {
  background: #FFFFFF;
  padding: 0;
}

/* 词书单元格 - 统一项目风格 */
.wordbook-cell {
  margin: 0 !important;
  border-radius: 0 !important;
  padding: 16px 18px !important;
  border-bottom: 1px solid #F2F3F5;
}

.wordbook-cell:last-child {
  border-bottom: none;
}

.current-cell {
  background: linear-gradient(135deg, #EDE9FE 0%, #DDD6FE 100%) !important;
  border-left: 3px solid #6366F1 !important;
}

/* 右侧内容 */
.cell-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6px;
  min-width: 100px;
}

/* 标签容器 */
.tags {
  display: flex;
  gap: 4px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

/* 进度信息 */
.progress-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4px;
  width: 100%;
}

.progress-text {
  font-family: var(--simHei);
  font-size: 11px;
  color: #86909C;
  font-weight: 400;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 20px;
}



/* 暗色模式 - 与项目保持一致 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #1E1B4B -10%, #1F2937 30%);
    /* 深色模式下与项目协调的紫色系渐变 */
  }



  .collapse-item {
    background: #2A2D3A;
    border-color: #3A3F4B;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .wordbook-list {
    background: #2A2D3A;
  }

  .wordbook-cell {
    border-bottom-color: #374151 !important;
  }

  .current-cell {
    background: linear-gradient(135deg, #312E81 0%, #3730A3 100%) !important;
    border-left-color: #A5B4FC !important;
  }

  .progress-text {
    color: #9598A9;
  }
}
