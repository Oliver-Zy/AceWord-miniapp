.container {
  width: 100%;
  height: 100%;
  background: #F6F7F8;
}

scroll-view {
  width: 100%;
  height: 100%;
  background: #F6F7F8;
}

.filter-container {
  width: 100%;
  height: 44px;
  background: #FFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.filter-item {
  display: flex;
  align-items: center;
}

.filter-item text {
  font-family: var(--simHei);
  font-size: 14px;
  color: #929499;
}

.filter-item image {
  width: 16px;
  height: 16px;
  padding-left: 2px;
}

.block-container {
  box-sizing: border-box;
  width: 100%;
  background: #FFFFFF;
  padding: 0 7px 12px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-flow: wrap;
}

.block-item-chosen {
  height: 32px;
  margin: 12px 11px 0;
  background: #E8E9FF;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.block-item-chosen text {
  font-family: var(--simHei);
  font-size: 13px;
  color: #424BFF;
}

.block-item-unchosen {
  height: 32px;
  margin: 12px 11px 0;
  background: #F3F4F7;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.block-item-unchosen text {
  font-family: var(--simHei);
  font-size: 13px;
  color: #929499;
}