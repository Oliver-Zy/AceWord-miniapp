@import '/templates/diccard-swiper.wxss';

.container {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #EDE9FE -10%, #F9FAFB 30%);
  /* 统一紫色系渐变背景 */
}

.tab-bar-shadow {
  width: 100%;
  height: 48px;
  padding-bottom: 30px;

  position: fixed;
  bottom: 0;
  z-index: 1;
  box-shadow: 0px -4px 18px rgba(0, 0, 0, 0.04);
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .container {
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #1E1B4B -10%, #1F2937 30%);
  }
  /* DarkMode 下的样式 end */
}