/* pages/settings/settings.wxss */
page {
  width: 100%;
  height: 100%;
  background: #FDFDFD;
}

.font-card {
  box-sizing: border-box;
  padding: 22px 22px 30px 22px;
  margin: 0 20px;
  border-radius: 16px;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.block-container {
  width: 100%;
  background: #FFFFFF;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-flow: wrap;
}

.block-item-chosen {
  height: 36px;
  margin: 14px 7px 0;
  background: #303339;  
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.block-item-chosen text {
  font-size: 13px;
  color: #FFFFFF;
}

.block-item-unchosen {
  height: 36px;
  margin: 14px 7px 0;
  background: #F2F3F5;  
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.block-item-unchosen text {
  font-size: 13px;
  color: #4E5969;}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .container {
    width: 100%;
    height: 100%;
    background: #1D1E30;
  }
  /* DarkMode 下的样式 end */
}