.container {
  box-sizing: border-box;
  padding-left: 16px;
  width: 100%;
  height: 100%;
  background: #F6F7F8;
}

scroll-view {
  width: 100%;
  height: 100%;
  background: #F6F7F8;
}

.wordBookCategory {
  height: 88px;
  margin: 16px 16px 0 0;
  background: #FFFFFF;
  border-radius: 12px;
  display: inline-flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  border: 1px solid #F1F3F4;
}

.wordBookCategory:active {
  transform: scale(0.98);
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.15);
  border-color: #6366F1;
}

.bookCover-img {
  width: 48px;
  height: 60px;
  padding: 0 12px;
}

.right-wordBookCategory {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.right-wordBookCategory text:nth-child(1) {
  font-family: var(--simHei);
  font-size: 18px;
  font-weight: 600;
  color: #303344;
}

.right-wordBookCategory text:nth-child(3) {
  font-family: var(--simHei);
  font-size: 13px;
  color: #6B7280;
  font-weight: 500;
}
@media (prefers-color-scheme: dark) {
  .container {
    background: #1D1E30;
    color:white;
  }

  scroll-view {
    width: 100%;
    height: 100%;
    background: #1D1E30;
  }

  .wordBookCategory {
    background: #27283A;
    border-color: #3A3F4B;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  
  .wordBookCategory:active {
    box-shadow: 0 4px 12px rgba(165, 180, 252, 0.2);
    border-color: #A5B4FC;
  }

  .right-wordBookCategory text:nth-child(1) {
    color: white;
  }
  
  .right-wordBookCategory text:nth-child(3) {
    color: #9CA3AF;
  }
}
