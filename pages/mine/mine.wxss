@import '/templates/mine.wxss';
.container {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #EDE9FE -10%, #F9FAFB 30%, #FFFFFF 50%);
  /* 统一紫色系渐变背景 */
}

.down-container {
  background: rgba(255, 255, 255, 0.8);
  box-sizing: border-box;
  margin-top: 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-bar-shadow {
  width: 100%;
  height: 48px;

  position: fixed;
  bottom: 0;
  box-shadow: 0px -4px 18px rgba(0, 0, 0, 0.04);
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .container {
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #1E1B4B -10%, #1F2937 30%);
  }

  .right-avatar-group text:first-child {
    font-family: var(--simHei);
    font-weight: 500;
    font-size: 18px;
    color: #EEF1F7;
  }

  .up-statistic-group text:nth-child(1) {
    font-family: var(--sfpro-bold);
    font-size: 20px;
    color: #EEF1F7;
  }

  .up-statistic-group text:nth-child(2) {
    padding-left: 2px;
    font-family: var(--simHei);
    font-weight: 500;
    font-size: 12px;
    color: #C0C1D4;
  }

  .statistic-group text:nth-child(3) {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 11px;
    color: #9598A9;
  }

  .down-container {
    background: #1D1F31;
    box-sizing: border-box;
    padding-top: 6px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .cell view text {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 16px;
    color: #CECFD6;
  }

  /* DarkMode 下的样式 end */
}