/* pages/ review/review.wxss */
.container {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #C5D6FA -10%, #F3F4F7 30%)
}

scroll-view {
  width: 100%;
  height: 100%;
}
.empty{
  text-align: center;
  padding-top: 10vh;
}
.review-header {
  box-sizing: border-box;
  width: 100%;
  padding: 0 16px;
  margin-top: 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-review-header text:nth-child(1) {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #2F3236;
}

.left-review-header text:nth-child(2) {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #4C34F0;
}

.left-review-header text:nth-child(3) {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #2F3236;
}

.selectAll-btn {
  width: 58px;
  height: 22px;
  background: #FFFFFF;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.selectAll-btn view {
  display: flex;
  align-items: center;
}

.selectAll-btn view image:first-child {
  width: 16px;
  height: 16px;
  padding-right: 2px;
}

.selectAll-btn view text:nth-child(2) {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 11px;
  color: #4E5969;
}

.add-btn-container {
  width: 100%;
  padding: 24px 0 4px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-btn {
  box-sizing: border-box;
  height: 28px;
  padding: 0 9px;
  background: #F7F8FA;
  border: 1px solid #E5E6EB;
  border-radius: 22px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-btn image {
  width: 16px;
  height: 16px;
  padding-right: 3px;
}

.add-btn text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #86909C;
}

.swiper {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.swiper-item {
  box-sizing: border-box;
  padding-bottom: 100px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.indicator-dots-container {
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
}

.indicator-dots {
  width: 50px;
  height: 4px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.active-dot {
  width: 18px;
  height: 4px;
  background: #FFFFFF;
  border-radius: 4px;
}

.inactive-dot {
  width: 4px;
  height: 4px;
  background: rgba(255, 255, 255, 0.48);
  border-radius: 4px;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .container {
    width: 100%;
    height: 100%;
    background: #1D1E30;
  }
  /* DarkMode 下的样式 end */

}