/* pages/wordbook-word-list/wordbook-word-list.wxss */
.word-cell {
  box-sizing: border-box;
  width: 100%;
  height: 62px;
  padding: 20px 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.word-cell .word {
  font-family: var(--inter-medium);
  font-size: 16px;
  color: #1D2129;
}

.blur-3 {    
  filter: blur(3px);  
  /* background-color: #fff; */
}
.blur-0{
  filter: blur(0px);  
}

.word-cell .nameCN {
  color: #9598A9;
  font-size: 13px;
  padding: 10px;
  padding-right: 0;
  min-width: 100px;
  text-align: right;
  transition: .2s;
}

.unchecked-img {
  width: 16px;
  height: 16px;
  padding: 20px;
  padding-right: 8px;
}

.hair-line {
  height: 1px;
  margin: 0 14px;
  background-color: #F2F3F5;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */

  .divider {
    border: none !important;
  }

  .word-cell .word {
    font-family: var(--inter-medium);
    font-size: 16px;
    color: #EEF1F7;
    font-weight: bold;
  }

  .word-cell .nameCN {
    color: #9598A9;
  }

  .hair-line {
    height: 1px;
    margin: 0 14px;
    background-color: #4a4d63;
  }

  .header {
    background: #1D1E30;
  }



  .container {
    background-color: #1D1E30;
  }

  /* DarkMode 下的样式 end */
}