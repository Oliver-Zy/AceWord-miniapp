@import '/templates/diccard-swiper.wxss';
@import '/templates/share-btns-container.wxss';

.container {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(180deg, #EDE9FE -10%, #F9FAFB 30%);
  /* 与紫色系统协调的淡紫色渐变背景 */
}

scroll-view {
  width: 100%;
}

.tab-bar-shadow {
  width: 100%;
  height: 48px;
  position: fixed;
  bottom: 0;
  z-index: 1;
  box-shadow: 0px -4px 18px rgba(0, 0, 0, 0.04);
}

.sharecard-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}



@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .container {
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #1E1B4B -10%, #1F2937 30%);
    /* 深色模式下与紫色系统协调的渐变 */
  }
  /* DarkMode 下的样式 end */
}