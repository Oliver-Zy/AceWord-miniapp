.container {
  box-sizing: border-box;
  padding: 16px 14px;
  margin: 0 16px;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.container:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
}

.book-cover {
  box-sizing: border-box;
  width: 67px;
  height: 88px;
  margin-right: 16px;
  border-radius: 6px;
  position: relative;
}

.book-cover-image {
  width: 100%;
  height: 100%;
}

.right-container {
  box-sizing: border-box;
  padding: 2px 0;
  height: 88px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header-right-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-right-container-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #1D2129;
  line-height: 1.3;
}

.line-limit-length {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tag-container {
  box-sizing: border-box;
  height: 18px;
  padding: 3px 6px;
  margin-left: 8px;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  border-radius: 6px;
  display: flex;
  align-items: center;
  box-shadow: 0 1px 3px rgba(99, 102, 241, 0.2);
}

.tag-text {
  font-family: var(--simHei);
  font-size: 10px;
  color: #FFFFFF;
  font-weight: 500;
}

.progress-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  line-height: 14px;
  color: #4E5969;
}

.progress {
  box-sizing: border-box;
  width: 100%;
  height: 6px;
  margin: 8px 0;
  background: #F2F3F5;
  border-radius: 12px;
  overflow: hidden;
}

.progress view {
  height: 6px;
  background: linear-gradient(90deg, #6366F1 0%, #8B5CF6 100%);
  border-radius: 12px;
  transition: width 0.3s ease;
}

.progress-placeholder {
  width: 100%;
  height: 4px;
  margin: 8px 0;
}

.footer-right-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-right-container text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 11px;
  line-height: 14px;
  color: #A3A9AF;
}

@media (prefers-color-scheme: dark) {
  .container {
    background: #27283A;
    color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  
  .container:active {
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }
  
  .header-right-container-text {
    color: white;
  }
  
  .progress {
    background: #3A3F4B;
  }
  
  .tag-container {
    background: linear-gradient(135deg, #A5B4FC 0%, #C4B5FD 100%);
    box-shadow: 0 1px 3px rgba(165, 180, 252, 0.3);
  }
  
  .tag-text {
    color: #1E1B4B;
  }
}