/* components/dicBook-components/dicBookMine/index.wxss */
.container {
  box-sizing: border-box;
  width: 100%;
  padding: 0 16px;
  margin-top: 14px;

  display: flex;
  flex-direction: column;
}

.up-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.wordBookName-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #373D54;
  max-width: 70%;
}

.line-limit-length {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.changeDic-btn {
  width: 70px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.changeDic-btn-img {
  width: 14px;
  height: 14px;
  padding-right: 2px;
  display: inline-block;
  vertical-align: middle;
}

.changeDic-btn-text {
  font-family: var(--simHei);
  font-size: 12px;
  color: #6366F1;
}

.down-container {
  width: 100%;
  margin-top: 6px;
  display: flex;
  flex-direction: column;
}

.dicBookMine-TextInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.dicBookMine-TextInfo text:nth-child(1) {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #6D6D6D;
}

.dicBookMine-TextInfo text:nth-child(2) {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 10px;
  color: #6D6D6D;
}

.progress {
  width: 100%;
  height: 4px;
  background: rgb(74, 97, 154, 0.12);
  border-radius: 12px;
  margin-top: 8px;

  display: flex;
}

.progress view:first-child {
  height: 4px;
  background: #6366F1;
  border-radius: 12px;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .wordBookName-text {
    font-family: var(--simHei);
    font-weight: 600;
    font-size: 18px;
    color: #EEF1F7;
  }

  .line-limit-length {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .changeDic-btn-text {
    font-family: var(--simHei);
    font-size: 12px;
    color: #A5B4FC;
  }

  .dicBookMine-TextInfo text:nth-child(1) {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 12px;
    color: #CECFD6;
  }

  .dicBookMine-TextInfo text:nth-child(2) {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 10px;
    color: #CECFD6;
  }

  .progress {
    width: 100%;
    height: 4px;
    background: #575868;
    border-radius: 12px;
    margin-top: 8px;

    display: flex;
  }

  .progress view:first-child {
    height: 4px;
    background: #A5B4FC;
    border-radius: 12px;
  }

  /* DarkMode 下的样式 end */
}