/* components/dicBook-components/dicBookCard/dicBookCard.wxss */
.container {
  box-sizing: border-box;
  padding: 16px 14px;
  margin: 16px 16px 0 16px;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  align-items: center;
}

.book-cover {
  box-sizing: border-box;
  width: 67px;
  height: 88px;
  margin-right: 16px;
  border-radius: 6px;
  position: relative;
}

.book-cover image {
  width: 100%;
  height: 100%;
}

.book-cover-text-1 {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 11px;
  line-height: 14px;
  color: #FFFFFF;
  position: absolute;
  top: 12px;
  left: 8px;
}

.book-cover-text-2 {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 8px;
  line-height: 12px;
  color: #FFFFFF;
  position: absolute;
  right: 6px;
  bottom: 4px;
}

.right-container {
  height: 88px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header-right-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-right-container-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #1D2129;
}

.tag {
  width: 48px;
  height: 18px;
  background: rgb(254, 152, 79, 0.12);
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tag text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 10px;
  color: #FE984F;
}

.progress-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  line-height: 14px;
  color: #4E5969;
}

.progress {
  box-sizing: border-box;
  width: 100%;
  height: 4px;
  margin: 8px 0;
  background: #F2F3F5;
  border-radius: 12px;
}

.progress view {
  height: 4px;
  background: #424BFF;
  border-radius: 12px;
}

.progress-placeholder {
  width: 100%;
  height: 4px;
  margin: 8px 0;
}

.footer-right-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-right-container text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 11px;
  line-height: 14px;
  color: #A3A9AF;
}