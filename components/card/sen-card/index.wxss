/* components/card-components/senCard/index.wxss */
.container {
  box-sizing: border-box;
  padding: 14px 12px 16px 12px;
  margin: 16px 16px 0;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
}

.english-text {
  font-family: var(--poppins-italic);
  font-weight: 400;
  font-size: 14px;
  color: #303843;
}

.english-text-grey {
  font-family: var(--poppins-italic);
  font-weight: 400;
  font-size: 14px;
  color: #cacaca;
}

.chinese-text {
  font-family: var(--simHei);
  font-size: 12px;
  color: #86909C;
}

.title-text {
  font-family: var(--simHei);
  font-size: 12px;
  color: #86909C;
}

.footer {
  width: 100%;
  margin-top: 12px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.right-footer {
  display: flex;
}

.icon-group {
  display: flex;
  align-items: flex-end;
}

.icon-group image {
  width: 16px;
  height: 16px;
  padding: 0 2px 0 16px;
}

.icon-group-text {
  font-family: var(--simHei);
  font-size: 10px;
  color: #A9B1CC;
}

.loader-container {
  height: 126px;
  margin: 16px 16px 0;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loader {
  height: 3px;
  width: 3px;
  color: #4C34F0;
  box-shadow: -8px -8px 0 3px,
              -8px -8px 0 3px,
              -8px -8px 0 3px,
              -8px -8px 0 3px;
  animation: loader-38 5s infinite;
}

@keyframes loader-38 {
  0% {
    box-shadow: -8px -8px 0 3px,
                -8px -8px 0 3px,
                -8px -8px 0 3px,
                -8px -8px 0 3px;
  }
  8.33% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px -8px 0 3px ;
  }
  16.66% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                8px 8px 0 3px ;
  }
  24.99% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  33.32% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px -8px 0 3px ;
  }
  41.65% {
    box-shadow: 8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                8px -8px 0 3px ;
  }
  49.98% {
    box-shadow: 8px 8px 0 3px ,
              8px 8px 0 3px ,
              8px 8px 0 3px ,
              8px 8px 0 3px ;
  }
  58.31% {
    box-shadow: -8px 8px 0 3px ,
                -8px 8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  66.64% {
    box-shadow: -8px -8px 0 3px ,
                -8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  74.97% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  83.3% {
    box-shadow: -8px -8px 0 3px ,
                8px 8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  91.63% {
    box-shadow: -8px -8px 0 3px ,
                -8px 8px 0 3px ,
                -8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  100% {
    box-shadow: -8px -8px 0 3px ,
                -8px -8px 0 3px ,
                -8px -8px 0 3px ,
                -8px -8px 0 3px ;
  }
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .container {
    box-sizing: border-box;
    padding: 14px 12px 16px 12px;
    margin: 16px 16px 0;
    background: #27283A;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
  }

  .english-text {
    font-family: var(--poppins-italic);
    font-weight: 400;
    font-size: 14px;
    color: #EEF1F7;
  }
  
  .chinese-text {
    font-family: var(--simHei);
    font-size: 12px;
    color: #9598A9;
  }

  .title-text {
    font-family: var(--simHei);
    font-size: 12px;
    color: #CCCCCC;
  }

  .icon-group-text {
    font-family: var(--simHei);
    font-size: 10px;
    color: #9598A9;
  }

  .loader-container {
    height: 126px;
    margin: 16px 16px 0;
    background: #27283A;
    border-radius: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  /* DarkMode 下的样式 end */
}