.container {
  box-sizing: border-box;
  padding: 24px 16px 12px;
  margin: 8px 16px 0 16px;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header text {
  font-family: var(--poppins-bold);
  font-size: 22px;
  color: #1D2129;
}

.header view {
  width: 72px;
  height: 28px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.header view image {
  width: 28px;
  height: 28px;
}

.inner-container {
  width: 100%;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-inner-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-inner-container view {
  width: 28px;
  display: flex;
  justify-content: center;
}

.header-inner-container view text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 14px;
  color: #C9CDD4;
}

.grid-container {
  width: 100%;
  margin-top: 20px;
  display: grid;
  grid-template-columns: 28px 28px 28px 28px 28px 28px 28px;
  justify-content: space-between;
}

.calendar-group {
  width: 28px;
  margin-bottom: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-group {
  width: 28px;
  height: 28px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-group text {
  font-family: var(--poppins-medium);
  font-size: 14px;
}

.date-done-icon {
  width: 16px;
  height: 16px;
  /* 使用图标原本颜色，不添加滤镜 */
}

.today-container {
  /* 今天的容器样式，主要通过内联样式设置边框 */
}

.completed-container {
  /* 完成状态的容器样式，主要通过内联样式设置背景 */
}



.loader-container {
  height: 126px;
  margin: 12px 16px 0 16px;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loader {
  height: 3px;
  width: 3px;
  color: #4C34F0;
  box-shadow: -8px -8px 0 3px,
              -8px -8px 0 3px,
              -8px -8px 0 3px,
              -8px -8px 0 3px;
  animation: loader-38 5s infinite;
}

@keyframes loader-38 {
  0% {
    box-shadow: -8px -8px 0 3px,
                -8px -8px 0 3px,
                -8px -8px 0 3px,
                -8px -8px 0 3px;
  }
  8.33% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px -8px 0 3px ;
  }
  16.66% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                8px 8px 0 3px ;
  }
  24.99% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  33.32% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px -8px 0 3px ;
  }
  41.65% {
    box-shadow: 8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                8px -8px 0 3px ;
  }
  49.98% {
    box-shadow: 8px 8px 0 3px ,
              8px 8px 0 3px ,
              8px 8px 0 3px ,
              8px 8px 0 3px ;
  }
  58.31% {
    box-shadow: -8px 8px 0 3px ,
                -8px 8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  66.64% {
    box-shadow: -8px -8px 0 3px ,
                -8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  74.97% {
    box-shadow: -8px -8px 0 3px ,
                8px -8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  83.3% {
    box-shadow: -8px -8px 0 3px ,
                8px 8px 0 3px ,
                8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  91.63% {
    box-shadow: -8px -8px 0 3px ,
                -8px 8px 0 3px ,
                -8px 8px 0 3px ,
                -8px 8px 0 3px ;
  }
  100% {
    box-shadow: -8px -8px 0 3px ,
                -8px -8px 0 3px ,
                -8px -8px 0 3px ,
                -8px -8px 0 3px ;
  }
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .container {
    box-sizing: border-box;
    padding: 24px 16px 22px;
    margin: 8px 16px 0 16px;
    background: #27283A;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header text {
    font-family: var(--poppins-medium);
    font-size: 22px;
    color: #EEF1F7;
  }

  .footer view view text{
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 11px;
    color: #D5D9E0;
  }

  .blue-dot {
    width: 4px;
    height: 4px;
    margin: 0 1px;
    background: #C7C6FF;
    border-radius: 18px;
  }

  .left-dot {
    width: 6px;
    height: 6px;
    margin-right: 8px;
    background: #C7C6FF;
    border-radius: 18px;
  }

  .right-dot {
    width: 6px;
    height: 6px;
    margin-right: 8px;
    background: #ffc59c;
    border-radius: 18px;
  }
  
  .right-progress {
    height: 4px;
    background: #ffc59c;
    border-radius: 10px;
  }
  /* DarkMode 下的样式 end */
}