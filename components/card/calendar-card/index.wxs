module.exports = {
  toTextColor: function (chosenDay, todayDay, index, isDarkMode) {
    if (!isDarkMode) {
      return chosenDay == (index) ? '#332FEB' : todayDay + 1 > (index) ? '#1D2129' : '#C9CDD4'
    } else {
      return chosenDay == (index) ? '#FFFFFF' : todayDay > (index) ? '#FFFFFF' : '#4B4F62'
    }
  },

  dateToDay: function (date) {
    return date[6] == '0' ? date.slice(7) : date.slice(6)
  },

  toMonth: function (monthIndex) {
    var monthArr = ["January", "February", "March",
      "April", "May", "June",
      "July", "August", "September",
      "October", "November", "December"]
    return monthArr[monthIndex]
  },

  getContainerClass: function (chosenDay, todayDay, index, calendarInfo) {
    var isCompleted = (calendarInfo.practiceWordCardNum != 0) || (calendarInfo.actualTodayCardNum > 0)
    var isToday = todayDay == index
    
    if (isToday) {
      return 'today-container'
    } else if (isCompleted) {
      return 'completed-container'
    }
    return ''
  },

  getContainerStyle: function (chosenDay, todayDay, index, calendarInfo, isDarkMode) {
    var isCompleted = (calendarInfo.practiceWordCardNum != 0) || (calendarInfo.actualTodayCardNum > 0)
    var isChosen = chosenDay == index
    var isToday = todayDay == index
    
    var style = 'border-radius: 50%;'
    
    if (isChosen) {
      // 选中状态的背景色
      style += 'background-color: ' + (isDarkMode ? '#C7C6FF' : 'rgba(51, 47, 235, 0.12)') + ';'
    } else if (isCompleted) {
      // 完成状态的背景色
      style += 'background-color: ' + (isDarkMode ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.05)') + ';'
    }
    
    if (isToday) {
      // 今天的边框
      style += 'border: 1px solid ' + (isDarkMode ? '#FFFFFF' : '#332FEB') + ';'
    }
    
    return style
  }
}