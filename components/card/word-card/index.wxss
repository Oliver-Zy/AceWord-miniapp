  }

  66.64% {
    box-shadow: -8px -8px 0 3px,
      -8px -8px 0 3px,
      8px 8px 0 3px,
      -8px 8px 0 3px;
  }

  74.97% {
    box-shadow: -8px -8px 0 3px,
      8px -8px 0 3px,
      8px 8px 0 3px,
