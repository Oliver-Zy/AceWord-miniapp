.container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: #FFFFFF;
  border-radius: 20px;
}

.header {
  height: 24px;
  padding: 24px 18px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.title-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #1D2129;
}

.cancel-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 13px;
  color: #878F9A;
}

.word-container {
  padding: 20px 0;
  margin: 0 18px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.word-text {
  font-family: var(--inter-medium);
  font-size: 16px;
  color: #1D2129;
}