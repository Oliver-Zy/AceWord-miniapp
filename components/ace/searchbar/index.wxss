/* components/ace/search-bar/index.wxss */
.container {
  width: 100%;
  height: 56px;
  box-sizing: border-box;
  padding: 12px 16px;
  background-color: #F6F6F8;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-field {
  box-sizing: border-box;
  padding: 6px 12px;
  background: #FFFFFF;
  border: 0.5px solid #E9ECF2;
  border-radius: 100px;
}

.input-class {
  font-family: var(--simHei);
  font-size: 14px;
  color: #1D2129;
}

.placeholder-class {
  font-family: var(--simHei);
  font-size: 14px;
  color: #86909C;
}

.cancel-text-container {
  width: 30px;
  margin-left: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-text {
  font-family: var(--simHei);
  font-size: 14px;
  color: #929499;
}
