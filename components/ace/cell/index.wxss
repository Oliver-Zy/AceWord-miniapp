/* components/wordBook-components/folderCell/index.wxss */
.container {
  box-sizing: border-box;
  padding: 0 18px;
  width: 100%;
  height: 78px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-container {
  display: flex;
  flex-direction: column;
}

.left-container text:nth-child(1) {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #1D2129;
}

.left-container text:nth-child(2) {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #4E5969;
}

.right-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.lable-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 14px;
  line-height: 16px;
  color: #4E5969;
}

.right-img {
  width: 16px;
  height: 16px;
}

.switch-img {
  width: 36px;
  height: 20px;
}

.hair-line {
  height: 1px;
  margin: 0 14px;
  background-color: #F2F3F5;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .left-container text:nth-child(1) {
    font-family: var(--simHei);
    font-weight: 600;
    font-size: 16px;
    color: #EEF1F7;
  }
  
  .left-container text:nth-child(2) {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 12px;
    color: #9598A9;
  }

  .hair-line {
    height: 1px;
    margin: 0 14px;
    background-color: #303344;
  }

  .lable-text {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 14px;
    line-height: 16px;
    color: #EEF1F7;
  }
  
  /* DarkMode 下的样式 end */
}