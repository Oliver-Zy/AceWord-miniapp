/* components/ace/search-bar/index.wxss */
.container {
  width: 100%;
  height: 56px;
  box-sizing: border-box;
  padding: 12px 16px;
  background-color: #F6F6F8;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.left-container {
  box-sizing: border-box;
  width: 54px;
  height: 30px;
  background: rgba(61, 66, 98, 0.12);
  border-radius: 25px;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.left-container image {
  width: 22px;
  height: 22px;
}

.word-text {
  font-family: var(--simHei);
  font-size: 16px;
  color: #1D2129;
}

.right-container {
  box-sizing: border-box;
  width: 54px;
  height: 30px;
  background: #3D4262;
  border-radius: 25px;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.right-container image {
  width: 22px;
  height: 22px;
}