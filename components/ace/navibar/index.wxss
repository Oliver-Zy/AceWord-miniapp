/* pages/components/naviBar/index.wxss */
.container {
  width: 100%;
  left: 0;
  top: 0;
  position: relative;
}

.search-container {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 6px;
}

.search-container-inner {
  margin-left: 16px;
  border: 0.5px solid #E9ECF2;
  border-radius: 100px;
  background: #FFFFFF;

  display: flex;
  align-items: center;
}

.search-img {
  width: 20px;
  height: 20px;
  padding: 0 4px 0 12px;
}

.search-container-inner-text {
  font-weight: 400;
  font-size: 13px;
  font-family: var(--simHei);
  color: #86909C;
}

.search-with-back-container {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 6px;
  width: 100%;
}

.search-with-back-container .back-img {
  width: 24px;
  height: 24px;
  margin: 0 8px 0 16px;
  flex-shrink: 0;
}

.search-with-back-container .search-container-inner {
  margin-right: 16px;
  flex-shrink: 0;
}

.inner-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 6px;
}

.back-img {
  width: 24px;
  height: 24px;
  padding-left: 16px;
}

.navi-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  display: flex;
  color: #181A1D;
}

.calendar-inner-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 6px;
}

.calendar-left-container {
  position: absolute;
  left: 16px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.streak-badge {
  display: flex;
  align-items: center;
  gap: 2px;
  padding: 4px 8px;
  background: rgba(255, 154, 70, 0.15);
  border-radius: 100px;
}

.streak-number {
  font-family: var(--simHei);
  font-weight: 700;
  font-size: 13px;
  color: #FF9A46;
}

.streak-emoji {
  font-size: 13px;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .search-container-inner {
    margin-left: 16px;
    border: 0.5px solid #282A3D;
    border-radius: 100px;
    background: #282A3D;

    display: flex;
    align-items: center;
  }

  .search-container-inner-text {
    font-weight: 400;
    font-size: 13px;
    font-family: var(--simHei);
    color: #9598A9;
  }

  .navi-text {
    font-family: var(--simHei);
    font-weight: 600;
    font-size: 16px;
    display: flex;
    color: #D5D9E0;
  }

  .streak-badge {
    background: rgba(255, 154, 70, 0.25);
  }

  .streak-number {
    color: #FFB366;
    font-weight: 700;
  }

  /* DarkMode 下的样式 end */
}

.back-btn,
.back-btn::after {
  border: none;
  padding: 0;
  margin: 0;
  width: 50px;
  height: 30px;
  padding-left: 16px;
}