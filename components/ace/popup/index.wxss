/* components/common/popup-bottom/index.wxss */
.container {
  box-sizing: border-box;
  width: 100%;
  padding: 24px 0;
  background: #FFFFFF;
  border-radius: 24px;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 0 18px 24px 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-btn {
  width: 56px;
  height: 24px;
  border: 1px solid #C9CDD4;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 18px;
  color: #1D2129;
}

.sub-header-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #878F9A;
}

.cell {
  box-sizing: border-box;
  width: 100%;
  height: 62px;
  padding: 0 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cell text:first-child {
  font-family: var(--simHei);
  font-size: 14px;
  color: #4E5969;
}

.cell-right {
  display: flex;
  align-items: center;
}

.cell-right text:first-child {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 14px;
  color: #1D2129;
}

.right-img {
  width: 16px;
  height: 16px;
  padding-left: 4px;
}

.hair-line {
  height: 1px;
  margin: 0 14px;
  background-color: #F2F3F5;
}

.btn-container {
  padding-top: 24px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.finish-btn {
  width: 246px;
  height: 40px;
  background: #3D4262;
  border-radius: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}


.finish-btn text{
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 14px;
  color: #ffffff;
}

.cell-left {
  display: flex;
  flex-direction: column;
}

.cell-left text:nth-child(1) {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #1D2129;
}

.cell-left text:nth-child(3) {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #4E5969;
}

.check-img {
  width: 22px;
  height: 22px;
}