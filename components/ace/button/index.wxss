.small-btn {
  height: 28px;
  padding: 0 9px;
  background: #F7F8FA;
  border: 1px solid #E5E6EB;
  border-radius: 22px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.small-btn image {
  width: 16px;
  height: 16px;
  padding-right: 3px;
}

.small-btn text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #86909C;
}

.small-btn-text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #86909C;
}

/* VIP风格的小按钮 - 与添加卡片按钮样式保持一致 */
.vip-small-btn {
  height: 28px;
  padding: 0 9px;
  background: #F7F8FA;
  border: 1px solid #E5E6EB;
  border-radius: 22px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vip-small-btn image {
  width: 16px;
  height: 16px;
  padding-right: 6px;
}

.vip-small-btn text {
  font-family: var(--simHei);
  font-weight: 400;
  font-size: 12px;
  color: #86909C;
}

/* VIP按钮警告状态 - 剩余数量较少时 */
.vip-small-btn-warning {
  background: #FFF7ED;
  border: 1px solid #FB923C;
}

.vip-small-btn-warning text {
  color: #EA580C;
  font-weight: 500;
}

.large-btn {
  height: 40px;
  padding: 0 30px;
  background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%);
  border-radius: 100px;
  box-shadow: 0px 8px 24px rgba(99, 102, 241, 0.20);
  display: flex;
  justify-content: center;
  align-items: center;
}

.large-btn text {
  font-family: var(--simHei);
  font-weight: 600;
  font-size: 16px;
  color: #FFFFFF;
}
.double-btn text{
  font-size: 14px!important;
}
.double-btn{
  min-width:45vw;
  justify-content: space-around;


}
.double-btn .divider{
  height: 40%;
  width:1px;
  background-color: #6366F1;
  margin:0 10px;
}

.ripple {
  background-position: center;
  transition: background 0.8s;
}

.ripple:active {
  background-color: rgba(0, 0, 0, 0.04);
  background-size: 100%;
  transition: background 0s;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  
  .small-btn {
    height: 28px;
    padding: 0 9px;
    background: #303344;    
    border: 1px solid #303344;
    border-radius: 22px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .small-btn text {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 12px;
    color: #86909C;
  }  

  .small-btn-text {
    font-family: var(--simHei);
    font-weight: 400;
    font-size: 12px;
    color: #86909C;
  }

  /* VIP按钮在深色模式下与添加卡片按钮保持一致 */
  .vip-small-btn {
    background: #303344;    
    border: 1px solid #303344;
  }

  .vip-small-btn text {
    color: #86909C;
  }

  /* VIP按钮警告状态 - 深色模式 */
  .vip-small-btn-warning {
    background: #451A03;
    border: 1px solid #EA580C;
  }

  .vip-small-btn-warning text {
    color: #FB923C;
  }
  
  /* DarkMode 下的样式 end */
}