/* components/wordBook-components/wordCell/index.wxss */
.container {
  box-sizing: border-box;
  width: 100%;
  padding: 20px 0 0 0;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 0 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header text {
  font-family: var(--poppins);
  font-size: 14px;
  color: #C9CDD4;
}

.word-cell {
  box-sizing: border-box;
  width: 100%;
  height: 62px;
  padding: 0 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.van-swipe-cell__right{
  line-height: 62px;
}
.word-cell .word {
  font-family: var(--inter-medium);
  font-size: 16px;
  color: #1D2129;
}
.word-cell .nameCN {
  color: #9598A9;
  font-size: 12px;
  padding-top: 4px;
}
.unchecked-img {
  width: 16px;
  height: 16px;
  padding: 20px;
  padding-right: 8px;
}

.hair-line {
  height: 1px;
  margin: 0 14px;
  background-color: #F2F3F5;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .header text {
    font-family: var(--poppins);
    font-size: 14px;
    color: #9598A9;
  }

  .word-cell .word {
    font-family: var(--inter-medium);
    font-size: 16px;
    color: #EEF1F7;
    font-weight: bold;
  }

  .word-cell .nameCN {
    color: #9598A9;
  }

  .hair-line {
    height: 1px;
    margin: 0 14px;
    background-color: #303344;
  }

  /* DarkMode 下的样式 end */
}